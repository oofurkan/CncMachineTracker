            "nullable": true
          },
          "status": {
            "type": "string",
            "nullable": true
          },
          "productionCount": {
            "type": "integer",
            "format": "int32"
          },
          "cycleTime": {
            "type": "number",
            "format": "double"
          },
          "timestamp": {
            "type": "string",
            "format": "date-time"
          }
        },
        "additionalProperties": false
      }
    }
  }
}